!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}
    %meta{:description => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %meta{:name => "description", :content => ""}
    %link{:rel => "shortcut icon", :href => "/favicon.png"}
    %script{:src => "https://code.jquery.com/jquery-1.10.2.min.js"}
    %script{:src => "/js/bootstrap.min.js"}
    %script{:src => "/js/nod.min.js"}
    %script
      var nod_options = {
      'groupClass': 'has-error',
      'groupSelector': '.form-group',
      'helpSpanDisplay': 'help-block'
      }

    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}
    %link{:href => "/css/layout.css", :rel => "stylesheet"}
    %title= @title

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

  %body
    .container
      .navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
        .container
          .navbar-header
            %button.navbar-toggle{:type => "button", :"data-toggle" => "collapse", :"data-target" => ".navbar-collapse"}
              %span.sr-only
                Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"}
              Cheese Mouse System
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li
                %a{:href => "/"}
                  %span.glyphicon.glyphicon-home
                  Inici
              %li
                %a{:href => "/multimedias"}
                  %span.glyphicon.glyphicon-film
                  Multimedia
              %li
                %a{:href => "/points"}
                  %span.glyphicon.glyphicon-map-marker
                  Punts
              - if @current_user.admin?
                %li
                  %a{:href => "/users"}
                    %span.glyphicon.glyphicon-user
                    Usuaris
            %ul.nav.navbar-nav.navbar-right
              - if @current_user
                %li
                  %a{:href => "#"}= "Hola, #{@current_user.name}"
                %li
                  - if @current_user.guest?
                    %form.navbar-form{:action => "/login", :method => "GET"}
                      %button.btn.btn-sm.btn-success
                        %span.glyphicon.glyphicon-log-in
                        Entra
                  - else
                    %form.navbar-form{:action => "/logout", :method => "GET"}
                      %button.btn.btn-sm.btn-success
                        %span.glyphicon.glyphicon-log-out
                        Surt
      .container
        - if @flash
          - if @flash.error
            .alert.alert-danger.alert-dismissable
              %button.close{:type => "button", :"data-dismiss" => "alert", :"aria-hidden" => "true"}
                &times;
              = @flash.error
          - if @flash.warning
            .alert.alert-warning.alert-dismissable
              %button.close{:type => "button", :"data-dismiss" => "alert", :"aria-hidden" => "true"}
                &times;
              = @flash.warning
          - if @flash.info
            .alert.alert-info.alert-dismissable
              %button.close{:type => "button", :"data-dismiss" => "alert", :"aria-hidden" => "true"}
                &times;
              = @flash.info
          - if @flash.success
            .alert.alert-success.alert-dismissable
              %button.close{:type => "button", :"data-dismiss" => "alert", :"aria-hidden" => "true"}
                &times;
              = @flash.success
        = yield

    .footer
      .container
        = haml :footer
