      ['#register-password', 'min-length:5', "La contrasenya ha de tenir com a mínim 5 caracters"],
      ['#register-confirm', 'same-as:#register-password', "Les contrasenyes no coincideixen"]
    ];

    $("form#register").nod(metrics, nod_options);
});
</script>
