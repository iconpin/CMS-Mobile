<table class="table table-stripped">
  <tr>
    <th>#</th>
    <th>Nom</th>
    <th>Estat</th>
    <th>Tipus</th>
    <th>Descripció curta</th>
    <th>Data creació</th>
    <th>Data última actualizació</th>
    <th>Accions</th>
  </tr>
  {{#list_multimedia}}
  <tr>
    <td>{{weight}}</td>
    <td><a href="{{link}}">{{name}}</a></td>
    <td>
      {{#ready}}
        {{#published}}
        <span class="label label-success">publicat</span>
        {{/published}}
        {{^published}}
        <span class="label label-warning">privat</span>
        {{/published}}
      {{/ready}}
      {{^ready}}
        <span class="label label-danger">pendent</span>
      {{/ready}}
    </td>
    <td>
      {{#image}}
        <span class="glyphicon glyphicon-picture"></span>
      {{/image}}
      {{#video}}
        <span class="glyphicon glyphicon-play"></span>
      {{/video}}
    </td>
    <td>{{description}}</td>
    <td>{{created_at}}</td>
    <td>{{updated_at}}</td>
    <td>
      <form action="/multimedia/destroy" method="POST">
        <button type="submit" name="id" value="{{id}}" class="btn btn-sm btn-danger">Esborra</button>
      </form>
    </td>
  </tr>
  {{/list_multimedia}}
  <tr>
    <td>
      <form action="/image/create" method="GET">
        <button type="submit" class="btn btn-sm btn-success">Nova Imatge</button>
      </form>
    </td>
    <td>
      <form action="/video/create" method="GET">
        <button type="submit" class="btn btn-sm btn-success">Nou Vídeo</button>
      </form>
    </td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
</table>
